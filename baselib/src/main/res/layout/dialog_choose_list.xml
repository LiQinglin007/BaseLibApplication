<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_10">

        <TextView
            android:id="@+id/dialog_list_top_cannle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_24"
            android:text="@string/cancel"
            android:textColor="@color/color_333"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/dialog_list_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_96"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="请选择"
            android:textColor="@color/default_color"
            android:textSize="@dimen/px_36" />

        <TextView
            android:id="@+id/dialog_list_top_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_24"
            android:text="@string/submit"
            android:textColor="@color/default_color"
            android:textSize="@dimen/px_30" />


    </LinearLayout>

    <include layout="@layout/include_line"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_weight="1"
        android:scrollbars="none"></android.support.v7.widget.RecyclerView>

    <include layout="@layout/include_line"></include>

    <LinearLayout
        android:id="@+id/dialog_list_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_112"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_list_cannle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_333"
            android:textSize="@dimen/px_32" />

        <TextView
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:background="@color/color_e0e0e0" />

        <TextView
            android:id="@+id/dialog_list_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/color_333"
            android:textSize="@dimen/px_32" />


    </LinearLayout>

</LinearLayout>
