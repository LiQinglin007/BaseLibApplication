<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/anim_linear_layout"
              android:layout_width="match_parent"
              android:layout_height="@dimen/vertical_view_group_double_height"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="@dimen/vertical_view_group_width"
        android:layout_height="@dimen/vertical_view_group_height"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/anim_first_content_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"/>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="@dimen/vertical_view_group_width"
        android:layout_height="@dimen/vertical_view_group_height"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/anim_second_content_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"/>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>